<section>
  <div class='row justify-content-center'>
    <div>
      <form>
        <div class='row'>

          {{! -------------------------------------- PRODUCT NAME -------------------------------------- }}
          <div class='col-sm-6 pt-2'>
            <label for='product_name' class='form-label mb-1'>Product name</label>
            <input type='text' class='form-control' id='product_name' placeholder='' value='' />
          </div>

          {{! -------------------------------------- PRODUCT PRICE -------------------------------------- }}
          <div class='col-sm-6 pt-2'>
            <label for='product_price' class='form-label mb-1'>Price</label>
            <input type='text' class='form-control' id='product_price' placeholder='$' value='' />
          </div>

          {{! -------------------------------------- PRODUCT DESCRIPTION -------------------------------------- }}
          <div class='mb-0 pt-2'>
            <textarea id='product_description' class='form-control product_description' rows='6' placeholder='Description'></textarea>
          </div>

          {{! -------------------------------------- PRODUCT CATEGORY -------------------------------------- }}
          <div class='col-md-5 pt-2'>
            <label for='product_category' class='form-label mb-1'>Category</label>
            <select class='form-select' id='product_category'>
              <option type='text' value=''>Choose...</option>
              {{! Loop over the categories and create list }}
              {{#each category}}
                <option>{{category_name}}</option>
              {{/each}}
            </select>
          </div>

          <div>

            <div class='col-md-4 pt-2'>
              <label for='product_country' class='form-label mb-1'>Country</label>
              <input type='text' class='form-control' id='product_country' placeholder='' value='{{user.country}}' disabled />
            </div>

            <div class='col-md-4 pt-2'>
              <label for='product_state' class='form-label mb-1'>State</label>
              <input type='text' class='form-control' id='product_state' placeholder='' value='{{user.state}}' disabled />
            </div>

            <div class='col-md-4 pt-2'>
              <label for='product_city' class='form-label mb-1'>City</label>
              <input type='text' class='form-control' id='product_city' placeholder='' value='{{user.city}}' disabled />
            </div>

          </div>

          <div class='pt-2'>
            <label for='product_img_url' class='form-label'>Image</label>
            <input class='form-control form-product-image' type='file' id='product_img_url' name='product_img_url' />
          </div>

        </div>

        <hr class='my-4' />

        <div class='productCreateCheck'></div>

        <button id='upload-product-button' class='w-100 btn btn-primary btn-lg fs-6' type='submit'>Upload</button>
      </form>
    </div>
  </div>
</section>